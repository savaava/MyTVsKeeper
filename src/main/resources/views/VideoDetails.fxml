<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.savaava.mytvskeeper.controllers.VideoDetailsController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="nameLbl" alignment="CENTER" text="Name Video" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Separator>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Separator>
            <HBox alignment="CENTER">
               <children>
                  <VBox prefHeight="463.0" prefWidth="634.0">
                     <children>
                        <Label text="Overview:">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                        <Label fx:id="overviewLbl" text="overview" />
                        <Separator prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                        </Separator>
                        <Label text="Genres:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="genresLbl" layoutX="10.0" layoutY="52.0" text="genres" />
                        <Separator prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                        </Separator>
                        <Label text="Backdrop:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <VBox alignment="CENTER">
                           <children>
                              <ImageView fitHeight="150.0" fitWidth="199.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/comingSoon.jpg" />
                                 </image>
                              </ImageView>
                           </children></VBox>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL">
                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                     </HBox.margin></Separator>
                  <VBox alignment="CENTER" prefHeight="463.0" prefWidth="154.0">
                     <children>
                        <Label text="Select the state">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <CheckBox fx:id="startedCheck" mnemonicParsing="false" prefHeight="17.0" prefWidth="82.0" text="Started">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin></CheckBox>
                        <CheckBox fx:id="terminatedCheck" mnemonicParsing="false" text="Terminated">
                           <VBox.margin>
                              <Insets bottom="20.0" top="5.0" />
                           </VBox.margin>
                        </CheckBox>
                        <Label fx:id="rateLbl" text="Rate the Video" />
                        <ChoiceBox fx:id="choiceBoxRating" prefHeight="25.0" prefWidth="92.0">
                           <VBox.margin>
                              <Insets bottom="285.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#onExit" text="Cancel" />
                              <Button fx:id="confirmBtn" mnemonicParsing="false" onAction="#onConfirm" text="Confirm" />
                           </children>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
