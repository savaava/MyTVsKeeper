<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="443.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.savaava.mytvskeeper.controllers.ImportController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="Select the type of video you want to import">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <VBox maxWidth="300.0">
               <children>
                  <VBox prefHeight="61.0" prefWidth="90.0" spacing="5.0">
                     <children>
                        <RadioButton fx:id="moviesBtn" mnemonicParsing="false" text="Movies">
                           <toggleGroup>
                              <ToggleGroup fx:id="videosGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="tvBtn" mnemonicParsing="false" text="TV Series" toggleGroup="$videosGroup" />
                        <RadioButton fx:id="animeBtn" mnemonicParsing="false" text="Anime Series" toggleGroup="$videosGroup" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Separator>
            <Button fx:id="browseBtn" mnemonicParsing="false" onAction="#onBrowse" text="Browse">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <ImageView fitHeight="187.0" fitWidth="204.0" opacity="0.5" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/DragAndDrop.png" />
               </image>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <Label text="Or drag the file here">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Separator layoutX="10.0" layoutY="103.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Separator>
            <GridPane prefHeight="0.0" prefWidth="530.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="260.0" minWidth="10.0" prefWidth="78.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="505.0" minWidth="10.0" prefWidth="452.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Source path:" />
                  <Label fx:id="sourceLbl" onMouseClicked="#onPathClicked" textFill="BLUE" underline="true" GridPane.columnIndex="1">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </GridPane>
            <Button fx:id="importBtn" mnemonicParsing="false" onAction="#onImport" text="Import">
               <VBox.margin>
                  <Insets right="478.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
